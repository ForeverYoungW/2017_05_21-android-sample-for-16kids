<?xml version="1.0" encoding="utf-8"?>
<litepal>
    <!-- 指定数据库名 -->
    <dbname value="BookStore" ></dbname>

    <!-- 指定数据库版本号 -->
    <version value="2" ></version>

    <!-- 指定所有的映射模型 -->
    <list>
        <mapping class="com.example.android.litepal_demo.Book"></mapping>
        <mapping class="com.example.android.litepal_demo.Category"></mapping>
    </list>
</litepal>